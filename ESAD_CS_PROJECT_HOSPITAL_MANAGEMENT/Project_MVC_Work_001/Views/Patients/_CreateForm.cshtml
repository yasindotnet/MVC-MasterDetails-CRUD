@model Project_MVC_Work_001.Models.ViewModels.PatientInputModel

@using (Ajax.BeginForm("Create", "Patients", new { }, new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "form",
    OnSuccess = "OnSuccess"
}, new { id = "frm", enctype = "multipart/form-data" }))
{
    <h2 class="display-4">Add New Patient</h2>
    <div class="row mb-2">
        @Html.LabelFor(x => x.DoctorId, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.DropDownListFor(x => x.DoctorId, new SelectList(ViewBag.Doctor, "DoctorId", "DoctorName"), "----select-----", new { @class = "form-select" })
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.DoctorId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        @Html.LabelFor(x => x.DepatmentId, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.DropDownListFor(x => x.DepatmentId, new SelectList(ViewBag.Department, "DepartmentId", "DepartmentName"), "----select-----", new { @class = "form-select" })
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.DepatmentId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        @Html.LabelFor(x => x.PatientName, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.PatientName, new { @class = "form-control" })
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.PatientName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        @Html.LabelFor(x => x.Age, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        @Html.LabelFor(x => x.AdmissioneDate, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.AdmissioneDate, new { @class = "form-control", type = "date" })
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.AdmissioneDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        @Html.LabelFor(x => x.MaritialStatus, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.CheckBoxFor(x => x.MaritialStatus)
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.MaritialStatus, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-2" })
        <div class="col-8">
            @Html.TextBoxFor(x => x.Picture, new { @class = "form-control", type = "file" })
        </div>
        <div class="col-2">
            @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        <div class="col">
            <div class="d-flex justify-content-between">
                <h3 class="display-4">Patientdetails</h3>
                <button class="btn btn-success btn-sm mb-2" type="submit" name="act" value="add" formnovalidate><i class="fa fa-plus-circle"></i></button>
            </div>
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Test</th>
                        <th>Description</th>
                        <th>Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.PatientDetails.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.EnumDropDownListFor(x => Model.PatientDetails[i].Test, new { @class = "form-select" })
                                @Html.ValidationMessageFor(x => Model.PatientDetails[i].Test, "", new { @class = "text-danger" })
                            </td>
                            <td>
                                @Html.TextBoxFor(x => Model.PatientDetails[i].Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => Model.PatientDetails[i].Description, "", new { @class = "text-danger" })
                            </td>
                            <td>
                                @Html.TextBoxFor(x => Model.PatientDetails[i].Cost, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => Model.PatientDetails[i].Cost, "", new { @class = "text-danger" })
                            </td>
                            <td>
                                <button name="act" value="remove_@i" type="submit" class="btn btn-danger btn-sm" formnovalidate>Remove</button>
                            </td>
                        </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-6">
            <button type="submit" name="act" value="insert" class="btn btn-primary">Save</button>
        </div>
    </div>
}
